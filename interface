import sqlite3
# crear conexi√≥n
def conectar():
  con = sqlite3.connect("BDD.db")
  return con

#crear tabla
def crear_tabla():
  con = conectar()
  cursor = con.cursor()
  cursor.execute('''CREATE TABLE IF NOT EXISTS BDD
                    (id INTEGER PRIMARY KEY AUTOINCREMENT,
                     nombre TEXT NOT NULL,
                     edad INTEGER NOT NULL,
                     grado TEXT NOT NULL)''')
   con.commit()
   con.close()

#insertar datos
def insertar_estudiante(nombre, edad, grado):
con = conectar()
cursor = con.cursor()
cursor.execute("INSERT INTO BDD (nombre, edad, grado) VALUES (?, ?, ?)", (nombre, edad, grado))
con.commit()
con.close()

#consultar datos
